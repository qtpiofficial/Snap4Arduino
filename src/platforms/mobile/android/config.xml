<?xml version='1.0' encoding='utf-8'?>
<widget 
    id="arduino.org.snap4arduino"
    version="change me"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Snap4Arduino</name>
    <description>
        Snap4Arduino for Android
    </description>
    <author email="bernat@arduino.org" href="http://snap4arduino.org">
        Bernat Romagosa - Arduino.org
    </author>
    <icon density="mdpi" height="128" platform="android" src="www/s4a/icon-128.png" width="128" />
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-crosswalk-webview" />
    <plugin name="cordova-plugin-file" />
    <plugin name="cordova-plugin-bluetooth-serial" spec="~0.4.6" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="landscape" />
    <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,assets,root" />
</widget>
